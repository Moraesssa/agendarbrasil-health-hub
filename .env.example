
# AgendarBrasil Health Hub - Environment Configuration
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ===========================================
# SUPABASE CONFIGURATION (Required)
# ===========================================
# Your Supabase project URL
VITE_SUPABASE_URL=https://your-project.supabase.co

# Your Supabase anon/public key (client-side)
VITE_SUPABASE_ANON_KEY=your-anon-key

# Supabase service role key (server-side functions only)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===========================================
# STRIPE CONFIGURATION (Payment Processing)
# ===========================================
# Stripe publishable key (client-side)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Stripe secret key (server-side functions only)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Stripe webhook secret (for webhook verification)
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ===========================================
# RESEND CONFIGURATION (Email Service)
# ===========================================
# Resend API key for sending appointment reminders
RESEND_API_KEY=re_your-resend-api-key

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Environment identifier
VITE_APP_ENV=development

# Application base URL (for webhooks and redirects)
VITE_APP_URL=http://localhost:5173

# ===========================================
# OPTIONAL CONFIGURATIONS
# ===========================================
# Enable debug mode for development
VITE_DEBUG_MODE=true

# Webhook endpoint for testing
VITE_WEBHOOK_URL=https://your-project-ref.supabase.co/functions/v1/stripe-webhook